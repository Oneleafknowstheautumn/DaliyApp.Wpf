<UserControl
    x:Class="DaliyApp.Wpf.Views.HomeUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DaliyApp.Wpf.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=ExpandIn}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="200" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="10"
                FontSize="20"
                Text="{Binding LoginInfo}" />
            <!--  第二行  -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding stackPanelList}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="10"
                            Background="{Binding BackColor}"
                            CornerRadius="5">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect
                                                        BlurRadius="10"
                                                        ShadowDepth="1"
                                                        Color="Black" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <StackPanel Margin="20,0">
                                    <materialDesign:PackIcon
                                        Width="30"
                                        Height="30"
                                        Margin="10,15"
                                        Kind="{Binding Icon}" />
                                    <TextBlock
                                        Margin="10,5"
                                        FontSize="15"
                                        Text="{Binding ItemName}" />
                                    <TextBlock
                                        Margin="15,20"
                                        FontSize="40"
                                        FontWeight="Bold"
                                        Text="{Binding Result}" />
                                </StackPanel>
                                <Canvas ClipToBounds="True">
                                    <Border
                                        Canvas.Top="10"
                                        Canvas.Right="-50"
                                        Width="120"
                                        Height="120"
                                        Background="#ffffff"
                                        CornerRadius="100"
                                        Opacity="0.1" />
                                    <Border
                                        Canvas.Top="80"
                                        Canvas.Right="-30"
                                        Width="120"
                                        Height="120"
                                        Background="#ffffff"
                                        CornerRadius="100"
                                        Opacity="0.1" />
                                </Canvas>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--  第三行  -->
            <Grid Grid.Row="2" Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  第三行左边  -->
                <Border
                    Margin="10,0"
                    Background="AntiqueWhite"
                    CornerRadius="5"
                    Opacity="0.5" />

                <DockPanel Margin="10,0">
                    <DockPanel
                        Margin="10,5"
                        DockPanel.Dock="Top"
                        LastChildFill="False">
                        <TextBlock
                            FontSize="20"
                            FontWeight="Bold"
                            Text="待办事项" />
                        <Button
                            Width="20"
                            Height="20"
                            VerticalAlignment="Top"
                            Command="{Binding OpenAddWaitCmm}"
                            DockPanel.Dock="Right"
                            Style="{StaticResource MaterialDesignFloatingActionButton}">
                            <materialDesign:PackIcon Kind="Add" />
                        </Button>
                    </DockPanel>
                    <!--  数据列表  -->
                    <ListBox
                        HorizontalContentAlignment="Stretch"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        ItemsSource="{Binding watiInfoList}"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel
                                    MaxHeight="80"
                                    Cursor=""
                                    LastChildFill="False">
                                    <StackPanel DockPanel.Dock="Left">
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Text="{Binding Tittle}" />
                                        <TextBlock
                                            Margin="0,5"
                                            Opacity="0.5"
                                            Text="{Binding Content}" />
                                    </StackPanel>
                                    <ToggleButton Cursor="Hand" DockPanel.Dock="Right" />
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>

                <!--  第三行右边  -->
                <Border
                    Grid.Column="1"
                    Margin="10,0"
                    Background="WhiteSmoke"
                    CornerRadius="5"
                    Opacity="0.5" />

                <DockPanel Grid.Column="1" Margin="10,0">
                    <DockPanel
                        Margin="10,5"
                        DockPanel.Dock="Top"
                        LastChildFill="False">
                        <TextBlock
                            FontSize="20"
                            FontWeight="Bold"
                            Text="待办事项" />
                        <Button
                            Width="20"
                            Height="20"
                            VerticalAlignment="Top"
                            DockPanel.Dock="Right"
                            Style="{StaticResource MaterialDesignFloatingActionButton}">
                            <materialDesign:PackIcon Kind="Add" />
                        </Button>
                    </DockPanel>
                    <!--  数据列表  -->
                    <ListBox
                        HorizontalContentAlignment="Stretch"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        ItemsSource="{Binding memorandaList}"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel
                                    MaxHeight="80"
                                    Cursor=""
                                    LastChildFill="False">
                                    <StackPanel DockPanel.Dock="Left">
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Text="{Binding Tittle}" />
                                        <TextBlock
                                            Margin="0,5"
                                            Opacity="0.5"
                                            Text="{Binding Content}" />
                                    </StackPanel>
                                    <ToggleButton Cursor="Hand" DockPanel.Dock="Right" />
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Grid>
        </Grid>
    </materialDesign:TransitioningContent>
</UserControl>