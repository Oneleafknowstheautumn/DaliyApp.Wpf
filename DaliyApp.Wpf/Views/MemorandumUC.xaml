<UserControl
    x:Class="DaliyApp.Wpf.Views.MemorandumUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DaliyApp.Wpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <md:DialogHost>
            <md:DrawerHost Cursor="" IsRightDrawerOpen="{Binding isAddMemorand}">

                <md:DrawerHost.RightDrawerContent>
                    <DockPanel Width="300" LastChildFill="False">
                        <TextBlock
                            Margin="10,5"
                            DockPanel.Dock="Top"
                            FontSize="20"
                            FontWeight="Bold"
                            Text="添加备忘录" />
                        <StackPanel
                            Margin="15"
                            DockPanel.Dock="Top"
                            Orientation="Horizontal">
                            <TextBlock Margin="0,5,0,0" Text="状态：" />
                            <ComboBox SelectedIndex="0">
                                <ComboBoxItem Content="待办" />
                                <ComboBoxItem Content="已完成" />
                            </ComboBox>
                        </StackPanel>
                        <TextBox
                            Margin="10,5"
                            md:HintAssist.Hint="请输入标题"
                            DockPanel.Dock="Top" />
                        <TextBox
                            MinHeight="100"
                            Margin="10,5"
                            md:HintAssist.Hint="请输入内容"
                            DockPanel.Dock="Top" />
                        <Button
                            Margin="10,5"
                            HorizontalAlignment="Center"
                            Content="添加备忘录"
                            DockPanel.Dock="Top" />
                    </DockPanel>
                </md:DrawerHost.RightDrawerContent>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--  第一行  -->
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <TextBox
                            VerticalAlignment="Center"
                            md:HintAssist.Hint="查找备忘录     "
                            md:TextFieldAssist.HasClearButton="True" />
                        <TextBlock
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Text="筛选:" />
                        <ComboBox SelectedIndex="0">
                            <ComboBoxItem Content="全部" />
                            <ComboBoxItem Content="已完成" />
                            <ComboBoxItem Content="未完成" />
                        </ComboBox>
                    </StackPanel>
                    <Button
                        Margin="10,5"
                        HorizontalAlignment="Right"
                        Command="{Binding memorandCmm}"
                        Content="添加备忘录" />

                    <!--  第二行  -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                        <ItemsControl
                            Margin="5"
                            HorizontalAlignment="Center"
                            ItemsSource="{Binding memorandumlist}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>

                                <DataTemplate>
                                    <md:TransitioningContent OpeningEffect="{md:TransitionEffect Kind=ExpandIn}">

                                        <Grid
                                            Width="220"
                                            Height="180"
                                            MaxWidth="250"
                                            Margin="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <Border
                                                Grid.RowSpan="2"
                                                Background="SkyBlue"
                                                CornerRadius="5"
                                                Cursor="" />
                                            <!--  画布  -->
                                            <Canvas Grid.RowSpan="2" ClipToBounds="True">
                                                <Border
                                                    Canvas.Top="10"
                                                    Canvas.Right="-50"
                                                    Width="120"
                                                    Height="120"
                                                    Background="#ffffff"
                                                    CornerRadius="100"
                                                    Opacity="0.1" />
                                                <Border
                                                    Canvas.Top="80"
                                                    Canvas.Right="-30"
                                                    Width="120"
                                                    Height="120"
                                                    Background="#ffffff"
                                                    CornerRadius="100"
                                                    Opacity="0.1" />
                                            </Canvas>
                                            <md:PopupBox
                                                Margin="5"
                                                HorizontalAlignment="Right"
                                                Panel.ZIndex="1">
                                                <Button Content="删除" />
                                            </md:PopupBox>
                                            <TextBlock
                                                Margin="10,5"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="{Binding Tittle}" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="10,5"
                                                Text="{Binding Content}" />
                                        </Grid>
                                    </md:TransitioningContent>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </md:DrawerHost>
        </md:DialogHost>
    </Grid>
</UserControl>