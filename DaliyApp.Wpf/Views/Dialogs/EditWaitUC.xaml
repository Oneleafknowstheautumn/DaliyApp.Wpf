<UserControl
    x:Class="DaliyApp.Wpf.Views.Dialogs.EditWaitUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DaliyApp.Wpf.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="530"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="10"
            FontSize="20"
            FontWeight="Bold"
            Text="编辑事项" />
        <DockPanel Grid.Row="1">
            <StackPanel
                Margin="10"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    Text="状态" />
                <ComboBox Margin="10,0" SelectedIndex="{Binding WaitInfo.Status}">
                    <ComboBoxItem Content="待办" />
                    <ComboBoxItem Content="已完成" />
                </ComboBox>
            </StackPanel>
            <TextBox
                Margin="10"
                md:HintAssist.Hint="请输入待办标题"
                DockPanel.Dock="Top"
                Text="{Binding WaitInfo.Tittle}" />
            <TextBox
                MinHeight="50"
                Margin="10"
                md:HintAssist.Hint="请输入待办内容"
                DockPanel.Dock="Top"
                Text="{Binding WaitInfo.Contene}" />
        </DockPanel>
        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="10"
                Command="{Binding CancelCmm}"
                Content="取消"
                Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button
                Margin="10"
                Command="{Binding SaveCmm}"
                Content="确认" />
        </StackPanel>
    </Grid>
</UserControl>